{
    "manifest_version": 3,
    "name": "Prototype Spike Snapshots",
    "description": "A prototype for spike about snapshotting",
    "version": "0.0.1",

    "options_uis": {
        "page": "options.html"
    },

    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "js": [
                "js/lib/single-file/chrome-browser-polyfill.js",
                "js/lib/single-file/single-file-frames.js",
                "js/lib/single-file/extension-frames.js",
                "js/vendor.js",
                "js/content_script.js"
            ],
            "all_frames": true,
            "match_about_blank": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "js": [
                "js/lib/single-file/chrome-browser-polyfill.js",
                "js/lib/single-file/single-file-bootstrap.js",
                "js/lib/single-file/extension-bootstrap.js",
                "js/lib/single-file/web/infobar-web.js",
                "js/vendor.js",
                "js/content_script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "web_accessible_resources":[
        {
            "resources": ["/js/lib/single-file/web/hooks/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage", "tabs", "activeTab"],
    "host_permissions": ["<all_urls>"]
}
