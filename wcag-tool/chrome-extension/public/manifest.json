{
    "manifest_version": 3,

    "name": "WCAG Tool",
    "description": "TODO",
    "version": "0.0.1",

    "options_ui": {
        "page": "options.html"
    },

    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "js": ["js/vendor.js", "js/content_script.js"],
            "matches": ["<all_urls>"]
        }
    ],

    "background": {
        "service_worker": "js/background.js"
    },

    "permissions": ["storage"],

    "host_permissions": ["<all_urls>"]
}
